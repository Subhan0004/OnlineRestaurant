<UserControl x:Class="RestaurantApp.Views.Windows.UserControls.CategoriesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantApp.Views.Windows.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="AliceBlue" BorderThickness="3">
        <TextBlock Height="30" Background="Crimson"  FontSize="20" Foreground="White"
                   TextAlignment="Center"  FontWeight="Bold" Text="{Binding Header}"/>
    </Border>
    
    
</UserControl>
